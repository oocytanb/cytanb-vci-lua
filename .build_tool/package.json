{
  "private": true,
  "name": "build_cytanb_lua",
  "description": "Build script for cytanb_lua",
  "version": "0.1.1",
  "author": "oO",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oocytanb/cytanb-vci-lua.git"
  },
  "main": "index.js",
  "types": "index.d.ts",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "",
    "build:cytanb_min": "ts-node build_cytanb_min",
    "build": "npm run clean && npm run build:cytanb_min",
    "start": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "luamin": "^1.0.4",
    "prettier": "^2.3.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.2.4"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "parserOptions": {
        "ecmaVersion": "es2020",
        "sourceType": "script"
      }
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
